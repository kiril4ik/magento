<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/bmwlogo.jpg</argument>
            </arguments>
        </referenceBlock>

        <referenceBlock name="copyright" remove="true"/>

        <referenceContainer name="footer">
            <block class="Magento\Framework\View\Element\Template" name="time_phtml" template="Magento_Theme::time.phtml"/>
        </referenceContainer>
    </body>
</page>
